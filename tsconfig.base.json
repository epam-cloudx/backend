{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
  }
}
