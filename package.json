{
  "name": "epam-cloudx",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:epam-cloudx/backend.git",
  "author": "Andras Vagner <andras.vagner@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "generate-service": "read -p 'Name of the service: ' name && serverless create --template aws-nodejs --path $name",
    "swagger-ui": "yarn workspace @epam-cloudx/swagger-ui start",
    "deploy:product-service": "yarn workspace @epam-cloudx/product-service build:deploy",
    "deploy:all": "yarn deploy:product-service",
    "test:product-service": "yarn workspace @epam-cloudx/product-service test",
    "test:all": "yarn test:product-service"
  },
  "dependencies": {
    "serverless": "^3.35.2"
  },
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/aws-lambda": "^8.10.124",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "swagger-ui": "^5.9.0",
    "ts-jest": "^29.1.1",
    "ts-json-schema-generator": "^1.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
